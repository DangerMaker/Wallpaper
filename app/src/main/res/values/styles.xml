<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlueAccent</item>
        <item name="colorPrimaryDark">@color/youku_blue</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="homepage_tab_text">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@drawable/homepage_tab_text_selector</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">18dp</item>
    </style>

    <style name="toolbar_menu_style">
        <item name="android:background">@drawable/toolbar_menu_bg</item>
        <item name="android:layout_width">46dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">center</item>
    </style>

</resources>
